<Window x:Name="windowMain" x:Class="ModerateBreeze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModerateBreeze - A weather app" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnSetLocation" Content="Set location" Margin="0,10,10,0" Click="btnSetLocation_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="126"/>
        <Button x:Name="btnStart" Content="Start monitor" Margin="0,45,10,0" VerticalAlignment="Top" Click="btnStart_Click" Height="30" HorizontalAlignment="Right" Width="126"/>
        <Label x:Name="lblStatus" Content="No location set" Margin="10,10,141,0" VerticalAlignment="Top" Height="30" FontWeight="Bold" FontStyle="Italic"  Background="Orange" />
        <ScrollViewer x:Name="scrollView" Margin="0,92,10,20" BorderBrush="Black" BorderThickness="3" VerticalScrollBarVisibility="Visible" CanContentScroll="True">
            <StackPanel x:Name="stackPanelV" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left"  VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <Label x:Name="lblMonitorStatus" Content="Monitor paused" Margin="10,45,141,0" VerticalAlignment="Top" Height="30" FontWeight="Bold" FontStyle="Italic"  Background="Orange" />

    </Grid>
</Window>
